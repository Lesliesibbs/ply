{
  "name": "perseus",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "denode": "^1.10.4",
    "flow-bin": "^0.40.0",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.1.0",
    "react-scripts": "0.9.0"
  },
  "dependencies": {
    "htmlparser2": "^3.9.2",
    "node-uuid": "^1.4.8",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-split-pane": "^0.1.57",
    "react-treeview": "^0.4.6",
    "react-uikit-codeblock": "^2.0.2"
  },
  "scripts": {
    "start:ws": "node src/server.js",
    "build:css": "node-sass src/ -o src/",
    "watch:css": "npm run build:css && node-sass src/ -o src/ --watch --recursive",
    "start:js": "react-scripts start",
    "start:target": "open 'http://loremipsumgenerator.com'",
    "start": "npm-run-all -p watch:css start:js start:target",
    "format": "prettier --single-quote --trailing-comma es5 --parser flow --print-width 80 --write '{src,decls}/**/*.js'",
    "build": "npm run build:css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "flow": "flow; test $? -eq 0 -o $? -eq 2"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
